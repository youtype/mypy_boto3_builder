# Setup script for {{ package.pypi_name }}.

# {{ copyright }}

[project]
name = "{{ package.pypi_name }}"
version = "{{ package.version }}"
license = "MIT"
authors = [{ name = "Vlad Emelianov", email = "vlad.emelianov.nz@gmail.com" }]
description = "Legacy type annotations for boto3, use types-boto3 instead."
readme = "README.md"
classifiers = [
{%- for classifier in package.get_classifiers() -%}
    {{ "\n    " -}}"{{ classifier -}}",
{%- endfor %}
]
keywords = [
    "boto3",
    "type-annotations",
    "boto3-stubs",
    "mypy",
    "typeshed",
    "autocomplete",
    "autogenerated",
]
requires-python = ">={{ package.min_python_version }}"
dependencies = [
    "boto3",
    "typing-extensions>=4.1.0; python_version<'3.12'",
]

[project.urls]
Homepage = "{{ builder_repo_url }}"
Documentation = "{{ package.get_local_doc_link() }}"
Source = "{{ builder_repo_url }}"
Tracker = "{{ builder_repo_url }}/issues"

[build-system]
requires = ["setuptools>=60"]
build-backend = "setuptools.build_meta"

[tool.setuptools]
include-package-data = true
packages = ["{{ package.name }}"]
